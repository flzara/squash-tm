  <changeSet id="tm-1.22.1-fix-awln_relationship_closure" author="jlor">
    <preConditions>
      <sqlCheck expectedResult="10">
        SELECT count(*)
        FROM awln_relationship_closure
        WHERE ANCESTOR_ID in (20, 128, 129, 130, 131, 132) AND DESCENDANT_ID in (20, 128, 129, 130, 131, 132);
      </sqlCheck>
      <sqlCheck expectedResult="1">
        SELECT count(*) from awln_relationship_closure
        WHERE ancestor_id = 20 AND descendant_id = 20 and depth = 0;
      </sqlCheck>
      <sqlCheck expectedResult="1">
        SELECT count(*) from awln_relationship_closure
        WHERE ancestor_id = 20 AND descendant_id = 129 and depth = 1;
      </sqlCheck>
      <sqlCheck expectedResult="1">
        SELECT count(*) from awln_relationship_closure
        WHERE ancestor_id = 20 AND descendant_id = 130 and depth = 1;
      </sqlCheck>
    </preConditions>
    <comment>check entries in awln_relationship_closure</comment>
  </changeSet>

</databaseChangeLog>
