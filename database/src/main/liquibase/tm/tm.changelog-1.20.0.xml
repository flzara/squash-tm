<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">


  <changeSet id="tm-1.20.0" author="jprioux">
    <comment>Update TM database version number</comment>
    <update tableName="CORE_CONFIG">
      <column name="VALUE" value="1.20.0"/>
      <where>STR_KEY = 'squashtest.tm.database.version'</where>
    </update>
  </changeSet>

  <changeSet id="tm-1.20.0-TM-176-custom-report-custom-export" author="jlor">
    <comment>Create new object CustomExport in Custom Report Workspace</comment>

    <createTable tableName="CUSTOM_REPORT_CUSTOM_EXPORT">

      <column name="CRCE_ID" type="BIGINT" autoIncrement="true" remarks="The auto-generated id">
        <constraints primaryKey="true" nullable="false" />
      </column>

      <column name ="NAME" type="VARCHAR(255)" remarks="The name of the Custom Export"/>

      <column name="PROJECT_ID" type="BIGINT" remarks="Foreign key to the Project">
        <constraints nullable="false" foreignKeyName="fk_custom_export_project_id" references="PROJECT (PROJECT_ID)" />
      </column>

      <column name="CREATED_BY" type="VARCHAR(50)">
        <constraints nullable="false" />
      </column>

      <column name="CREATED_ON" type="DATETIME">
        <constraints nullable="false" />
      </column>

      <column name="LAST_MODIFIED_BY" type="VARCHAR(50)" defaultValue="NULL" />

      <column name="LAST_MODIFIED_ON" type="DATETIME" defaultValue="NULL" />

    </createTable>

    <createIndex tableName="CUSTOM_REPORT_CUSTOM_EXPORT" indexName="idx_fk_custom_export_project_id">
      <column name="PROJECT_ID"/>
    </createIndex>

  </changeSet>

  <changeSet id="tm-1.20.0-TM-125-use-tm-tree-structure-in-scm-repository" author="jlor">
    <comment>Add an option in Project automation settings to use the tm tree structure when transmitting test cases to a scm repository</comment>

    <addColumn tableName="PROJECT">
      <column name="USE_TREE_STRUCTURE_IN_SCM_REPO" type="BOOLEAN" defaultValueBoolean="true">
        <constraints nullable="false"/>
      </column>
    </addColumn>
  </changeSet>

  <changeSet id="tm-1.20.0-TM-13-add-conflict-association-ismanuel" author="amk">
    <addColumn tableName="AUTOMATION_REQUEST">
      <column name="CONFLICT_ASSOCIATION" defaultValue="NULL" type="TEXT">
      </column>
      <column name="IS_MANUAL" type="BOOLEAN" defaultValueBoolean="false">
        <constraints nullable="false" />
      </column>
    </addColumn>
  </changeSet>

  <changeSet id="tm-1.20.0-TM-13-update-is-manual-postgresql" author="amk" dbms="postgresql">
   <sql>
     UPDATE AUTOMATION_REQUEST SET IS_MANUAL = true
     WHERE TEST_CASE_ID in (SELECT tc.TCLN_ID FROM TEST_CASE tc, AUTOMATION_REQUEST ar WHERE ar.TEST_CASE_ID = tc.TCLN_ID AND tc.TA_TEST IS NOT null);
   </sql>
  </changeSet>

  <changeSet id="tm-1.20.0-TM-13-update-is-manual-mysql" author="amk" dbms="mysql">
    <sql>
      UPDATE AUTOMATION_REQUEST ar SET ar.IS_MANUAL = true
      WHERE TEST_CASE_ID in (SELECT tc.TCLN_ID FROM TEST_CASE tc WHERE ar.TEST_CASE_ID = tc.TCLN_ID AND tc.TA_TEST IS NOT null);
    </sql>
  </changeSet>

  <changeSet id="tm-1.20.0-TM-13-update-is-manual-h2" author="amk" dbms="h2">
    <sql>
      UPDATE AUTOMATION_REQUEST ar SET ar.IS_MANUAL = true
      WHERE TEST_CASE_ID in (SELECT tc.TCLN_ID FROM TEST_CASE tc WHERE ar.TEST_CASE_ID = tc.TCLN_ID AND tc.TA_TEST IS NOT null);
    </sql>
  </changeSet>

  <changeSet id="tm-1.20.0-TM-13-association-auto-cdt-script-auto" author="amk">
    <addColumn tableName="TEST_CASE">
      <column name="UUID" type="java.sql.Types.VARCHAR(36)" >
      </column>
    </addColumn>
    <addUniqueConstraint tableName="TEST_CASE" columnNames="UUID" constraintName="uc_test_case_uuid"/>
  </changeSet>

  <changeSet id="tm-1.20.0-TM-13-create-uuid-module-postgresql" author="aguilhem" dbms="postgresql">
    <comment>create uuid extension if not exist (for postgresql > 9.1 </comment>
    <sql>
      CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
    </sql>
  </changeSet>

  <changeSet id="tm-1.20.0-TM-13-update-uuid-postgresql" author="amk" dbms="postgresql">
    <comment>generate uuid if it's null </comment>
    <sql>
      UPDATE TEST_CASE SET UUID =  uuid_generate_v4() WHERE UUID is NULL;
      ALTER TABLE TEST_CASE ALTER COLUMN UUID SET NOT NULL;
    </sql>
  </changeSet>
  <changeSet id="tm-1.20.0-TM-13-update-uuid-mysql" author="amk" dbms="mysql">
    <comment>generate uuid if it's null </comment>
    <sql>
      UPDATE TEST_CASE SET UUID =  uuid() WHERE UUID is NULL;
      ALTER TABLE TEST_CASE MODIFY UUID VARCHAR(36) NOT NULL;
    </sql>
  </changeSet>
  <changeSet id="tm-1.20.0-TM-13-update-uuid-h2" author="amk" dbms="h2">
    <comment>generate uuid if it's null </comment>
    <sql>
      UPDATE TEST_CASE SET UUID =  random_uuid() WHERE UUID is NULL;
      ALTER TABLE TEST_CASE MODIFY UUID VARCHAR2(36) NOT NULL;
    </sql>
  </changeSet>

</databaseChangeLog>
