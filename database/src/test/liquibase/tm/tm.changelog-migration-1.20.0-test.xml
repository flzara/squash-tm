    <preConditions>
      <sqlCheck expectedResult="6">
        select count(*) from CORE_PARTY_AUTHORITY
        where AUTHORITY = 'ROLE_TF_FUNCTIONAL_TESTER';
      </sqlCheck>
    </preConditions>
  </changeSet>

